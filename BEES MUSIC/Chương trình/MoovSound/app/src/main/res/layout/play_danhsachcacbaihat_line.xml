<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <TextView
            android:id="@+id/txt_playdanhsach_index"
            android:text="1"
            android:textSize="20sp"
            android:padding="16dp"
            android:textColor="@color/casilight"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_tenbaihat_playdanhsachbaihatline"
            android:layout_toEndOf="@id/txt_playdanhsach_index"
            android:singleLine="true"
            android:maxWidth="240dp"
            android:layout_marginTop="16dp"
            android:text="We Don't Talk Anymore"
            android:textColor="@color/tenbaihatlight"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_tencasi_playdanhsachbaihatline"
            android:layout_toEndOf="@id/txt_playdanhsach_index"
            android:layout_below="@id/txt_tenbaihat_playdanhsachbaihatline"
            android:singleLine="true"
            android:maxWidth="240dp"
            android:text="Charlie Puth, Selena Gomez"
            android:textColor="@color/casilight"
            android:textSize="12sp"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        </RelativeLayout>

</RelativeLayout>