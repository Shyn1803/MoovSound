<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_chude_theloai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/txt_title_chude_theloai"
            android:text="Chủ Đề Và Thể Loại"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/titlecolor"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_xemthem_chude_theloai"
            android:text="@string/XemThem"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/xemthem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <HorizontalScrollView
        android:id="@+id/horizontalscrollview_chude_theloai"
        android:scrollbars="none"
        android:layout_below="@+id/relative_chude_theloai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </HorizontalScrollView>
</RelativeLayout>