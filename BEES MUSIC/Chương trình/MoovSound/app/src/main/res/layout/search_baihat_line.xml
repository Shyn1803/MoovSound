<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="72dp">
    <ImageView
        android:scaleType="fitXY"
        android:layout_margin="16dp"
        android:id="@+id/imageviewsearchbaihat"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:textSize="16sp"
        android:textColor="#0a0a0a"
        android:text="Ten bai hat"
        android:layout_toRightOf="@id/imageviewsearchbaihat"
        android:layout_marginTop="16dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:id="@+id/textviewsearchtenbaihat"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="12sp"
        android:textColor="#5f5e5e"
        android:text="Ca si"
        android:layout_below="@id/textviewsearchtenbaihat"
        android:layout_toRightOf="@id/imageviewsearchbaihat"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:gravity="bottom"
        android:id="@+id/textviewsearchcasi"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="20dp" />
    <ImageView
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/iconlove"
        android:id="@+id/imageviewsearchluotthich"
        android:layout_width="24dp"
        android:layout_height="24dp" />
</RelativeLayout>