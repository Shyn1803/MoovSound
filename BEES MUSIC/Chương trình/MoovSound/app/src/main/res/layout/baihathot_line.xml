<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="72dp">
    <ImageView
        android:id="@+id/imagev_baihathot"
        android:scaleType="fitXY"
        android:layout_margin="16dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/txt_tenbaihathot"
        android:text="Way Back Homeasdasdsadasdasdasdasda"
        android:textColor="@color/tenalbum"
        android:textStyle="normal"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="240dp"
        android:layout_toEndOf="@+id/imagev_baihathot"
        android:layout_alignTop="@id/imagev_baihathot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_casi_baihathot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imagev_baihathot"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/imagev_baihathot"
        android:ellipsize="end"
        android:maxWidth="230dp"
        android:maxLines="1"
        android:text="Shaun, Conor Maynard"
        android:textColor="@color/casialbum"
        android:textSize="12sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/imagev_heart"
        android:src="@drawable/iconlove"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_width="24dp"
        android:layout_height="24dp" />

</RelativeLayout>