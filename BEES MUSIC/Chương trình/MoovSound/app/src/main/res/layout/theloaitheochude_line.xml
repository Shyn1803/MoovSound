<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="8dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/framelayout_theloaitheochude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imagev_theloaitheochude"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:layout_width="180dp"
                android:layout_height="180dp" />
        </FrameLayout>
        <TextView
            android:id="@+id/txt_tentheloaitheochude"
            android:ellipsize="end"
            android:maxLines="2"
            android:maxWidth="180dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:text="Nhạc Việt Hot Trong Tháng 1"
            android:textSize="15sp"
            android:textStyle="normal"
            android:textColor="@color/tenalbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_tencasialbum"
            android:maxLines="1"
            android:maxWidth="180dp"
            android:ellipsize="end"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:text="Various Artists"
            android:textSize="13sp"
            android:textStyle="normal"
            android:textColor="@color/casialbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</android.support.v7.widget.CardView>