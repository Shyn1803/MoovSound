<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/framelayout_allalbum_line"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imagev_allalbum_line"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:layout_width="180dp"
            android:layout_height="180dp" />
    </FrameLayout>
    <TextView
        android:id="@+id/txtx_tenalbum_line"
        android:ellipsize="end"
        android:maxWidth="180dp"
        android:maxLines="2"
        android:lines="2"
        android:gravity="start"
        android:text="Nhạc Việt Hot Trong Tháng"
        android:textSize="15sp"
        android:textColor="@color/tenalbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_tencasialbum_line"
        android:text="Various Artists"
        android:textColor="@color/casialbum"
        android:textSize="13dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>