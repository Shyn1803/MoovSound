<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:background="@drawable/custom_background_banner"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>

    <ImageView
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/imagev_backgroundplaylist"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <ImageView
        android:id="@+id/imagev_playlist"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_alignBottom="@+id/imagev_backgroundplaylist"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="6dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/txt_TenPlaylist"
        android:text="100 Ca Khúc Hay Nhất Mọi Thời Đại"
        android:textColor="@color/whitecolor"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/imagev_playlist"
        android:layout_alignBottom="@id/imagev_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="8dp"
        android:maxLines="1"/>
</RelativeLayout>